<definition component-name="smoke">
	<command name="smoke">
		<execute function="Open" locator1="http://localhost:8080/" />
		<execute function="AssertClick" locator1="//span[contains(@class,'sign-in')]/a" value1="Sign In" />

		<execute function="AssertVisible" locator1="//div[contains(@class,'modal-dialog')]//div[contains(@class,'modal-body')]" />

		<execute function="Type" locator1="//div[label[contains(.,'Email Address')]]/input[@type='text']" value1="test@liferay.com" />
		<execute function="Type" locator1="//div[label[contains(.,'Password')]]/input" value1="test" />

		<execute function="AssertClick" locator1="//button[contains(.,'Sign In')]" value1="Sign In" />
		<execute function="Pause" locator1="5000" />

		<execute function="Open" locator1="http://localhost:8080/" />

		<execute function="Click" locator1="//*[@data-qa-id='controlMenu']//*[@data-qa-id='add']" />
		<execute function="Pause" locator1="5000" />
		<execute function="Type#sendKeys" locator1="//input[contains(@id,'searchApplication')]" value1="Sample JSP Portlet" />
		<execute function="AssertClick" locator1="//span[contains(@data-search,'-Sample JSP Portlet') and contains(@class,'add-content-item')]" value1="Add" />
		<execute function="Pause" locator1="5000" />
		<execute function="AssertText" locator1="SamplePortlet#PANEL_TITLE" value1="Sample JSP Portlet" />
		<execute function="AssertText" locator1="SamplePortlet#PANEL_CONTENT" value1="Hello from Sample JSP!" />
	</command>
</definition>